[user]
	email = echacko@cewit.org.in
	name = echacko

[color]
	ui = true
[color "branch"]
	current = green bold
	remote = red bold
[color "diff"]
	meta = yellow
	frag = cyan bold
	old = red bold
	new = green bold
[color "status"]
	added = green bold
	changed = red bold
	untracked = red bold

[core]
	editor = vim
	excludesfile = /home/echacko/.gitignore_global
	autocrlf = input

[github]
	user = echacko

[diff]
	tool = vimdiff
[difftool]
	prompt = false

[merge]
	tool = vimdiff
[mergetool]
	keepBackup = false

[credential]
	helper = cache --timeout=3600

[format]
	pretty = oneline

[push]
	default = matching

[alias]
	st = status -sb
	ci = commit -v
	co = checkout
	last = log -1 HEAD
	l = log --pretty=format:'%C(yellow)%h%C(magenta)%d%Creset %s %C(cyan)%cr%Creset' --graph
	d = difftool
