[colors]
include-file = ~/.config/polybar/colors

[bar/i3]
monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 25
;offset-x = 25%
;offset-y = 1%
radius = 0.0
fixed-center = false
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}
; Enables pseudo-transparency for the bar
; If set to true the bar can be transparent without a compositor.
pseudo-transparency = true

line-size = 3
; line-color = #f00

border-size = 2
border-color = #00000000

padding-left = 0
padding-right = 0

tray-position = right
tray-padding = 0
;tray-background = #0063ff

module-margin-left = 1
module-margin-right = 1

font-0 = RobotoMono Nerd Font:antialias=true :size=9;0
font-1 = RobotoMono Nerd Font:antialias=true :size=6;0
font-2 = RobotoMono Nerd Font:antialias=false:size=9;0

modules-left = i3
modules-center = 
modules-right = spotify pulseaudio filesystem memory cpu netstat battery date


wm-restack = i3
override-redirect = false

; scroll-up = i3wm-wsnext
; scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

; Define fallback values used by all module formats
; format-foreground = ${colors.foreground}
; format-background = ${colors.background}
; format-underline  = ${colors.underline}
; format-overline   = ${colors.underline}
; format-spacing    = 0
; format-padding    = 0
; format-margin     = 0
; format-offset     = 0

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode = %mode%
label-mode-padding = 2
label-mode-foreground = {colors.foreground-alt}
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-foreground = ${colors.primary}
label-focused-underline = ${colors.primary}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 2
label-unfocused-foreground = ${colors.foreground-alt}
label-unfocused-underline = ${colors.underline}
; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.background}
label-urgent-foreground = ${colors.alert}
label-urgent-padding = 2

; Separator in between workspaces
label-separator = |

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

format-mounted-prefix = " "
format-mounted-prefix-foreground = ${colors.foreground-alt}
format-mounted-underline = ${colors.underline}

label-mounted = %free%

[module/netstat]
type = internal/network
interface = wlp2s0
interval = 3
format-connected-underline = ${colors.underline}
label-connected = "  %upspeed:8:8%  %downspeed:8:8% "

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.underline}
label = %percentage:3:4%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.underline}
label = %gb_free:4%

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = <label-connected>
format-connected-underline = ${colors.underline}
label-connected = %essid%
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}

format-disconnected =
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = disconnected
;format-disconnected-prefix = ""
;label-disconnected-foreground = ${colors.foreground-alt}


[module/eth]
type = internal/network
interface = net0
interval = 3.0

format-connected-underline = ${colors.underline}
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 5

date = "%a %d %b"
date-alt = "%d-%m-%Y"

time = "%H:%M"
time-alt =
; time-alt = %H:%M:%S

format-underline = ${colors.underline}

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

sink-0 = alsa_output.pci-0000_00_1f.3.analog-stereo
sink-1 = bluez_sink.F4_BC_DA_02_4B_2F.a2dp_sink

use-ui-max = true
interval = 5

format-volume = <ramp-volume> <label-volume>
format-volume-foreground = ${colors.foreground-alt}
format-volume-underline = ${colors.underline}
format-muted-foreground = ${colors.foreground-alt}
format-muted-underline = ${colors.underline}
label-muted = "  "
format-muted-prefix = 
format-muted-prefix-foreground = ${colors.foreground-alt}

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
interval = 5
battery = BAT0
adapter = AC0
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline =  ${colors.underline}

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${colors.underline}

format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${colors.underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 =  
animation-charging-1 =  
animation-charging-2 =  
animation-charging-3 =  
animation-charging-4 =  
animation-charging-foreground = ${colors.foreground-alt}
animation-charging-framerate = 750

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
format = <label>
exec = python ~/.config/polybar/scripts/spotify_status.py -q -f '{artist}: {song}'
format-underline = ${colors.underline}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
margin-top = 0
margin-bottom = 5

